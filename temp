#include <LiquidCrystal.h>
LiquidCrystal lcd(8, 9, 4, 5, 6, 7);

void setup() {
  lcd.begin(16, 2);
  lcd.clear();
  pinMode(10,OUTPUT);
  digitalWrite(10,HIGH);
}

int i = 0;
void loop() {
  if(i!=15){
    lcd.setCursor(i,0);
    lcd.print("*");
    lcd.setCursor(i,1);
    lcd.print("*");
    lcd.print("*");
    delay(400);
  }
  else{
    lcd.setCursor(i, 0);
    lcd.print("*");
    lcd.setCursor(i, 1);
    lcd.print("*              ");

    i = 0;
  }
  i++;
}
